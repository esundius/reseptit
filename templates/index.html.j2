{% extends "base.html.j2" %}
{% block title %}Main page{% endblock %}
{% block head %}
  {{ super() }}
  <style>
  </style>
{% endblock %}
{% block menu %}
  {{ super() }}
{% endblock %}
{% block flash %}
  {{ super() }}
{% endblock %}
{% block body %}
  <h1>Recipes</h1>
  {% if recipes %}
    {% block list_recipes scoped %}
      {{ super() }}
    {% endblock %}
    <p>
      {% if page > 1 %}
        <a href="/{{ page - 1 }}">&lt; Previous</a>
      {% endif %}
      Page {{ page }} of {{ page_count }}
      {% if page < page_count %}
        <a href="/{{ page + 1 }}">Next &gt;</a>
      {% endif %}
    </p>
  {% else %}
    No recipes found.
  {% endif %}
{% endblock %}